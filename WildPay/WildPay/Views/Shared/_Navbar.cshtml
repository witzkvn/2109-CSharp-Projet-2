
<div class="navbar">
    <div class="navbar-logo">
            @Html.ActionLink("WildPay", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    </div>
    <div class="mobile-nav-open" id="mobileNavOpen">
        <ion-icon name="menu"></ion-icon>
    </div>
    <div class="navbar-links" id="nav-menu">
        <div class="mobile-nav-close" id="mobileNavClose">
            <ion-icon name="close"></ion-icon>
        </div>
        <div class="nav-content">
            @{
                if (Session["Id"] == null)
                {
                    <a class="navbar-link" href="@Url.Action("Index", "Connexion")">Connexion</a>
                    <a class="navbar-link btn btn-primary" href="@Url.Action("Index", "AccountCreation")">Inscription</a>

                }
                else
                {
                    <a href="" class="navbar-link">
                        @Session["group"]
                    </a>

                    <a href="@Url.Action("Index","Expense")" class="navbar-link">
                        <ion-icon name="pricetags"></ion-icon>
                        <p>Dépenses</p>
                    </a>


                    <a href="@Url.Action("Index","Categories")" class="navbar-link">
                        <ion-icon name="filter"></ion-icon>
                        <p>Catégories</p>
                    </a>


                    <a href="@Url.Action("Index","Account")" class="navbar-link">
                        <ion-icon name="person-circle"></ion-icon>
                        <p>Compte</p>
                    </a>


                    <a href="@Url.Action("LogOut","Connexion")" class="navbar-link">
                        <ion-icon name="exit"></ion-icon>
                        <p>Déconnexion</p>
                    </a>

                }
            }

        </div>
    </div>
</div>